{
  "rootType": "website",
  "types": {
    "website": {
      "label": "Website",
      "role": "root",
      "children": [{ "type": "page", "collection": "pages" }],
      "actions": { "add": ["page"] },
      "ui": {
        "actions": {
          "add": { "icon": "+", "title": "Add page" }
        }
      }
    },
    "page": {
      "labelField": "name",
      "idField": "id",
      "role": "branch",
      "children": [{ "type": "container", "collection": "containers" }],
      "actions": { "add": ["container"], "remove": true, "star": true },
      "ui": {
        "actions": {
          "add": { "icon": "+", "title": "Add container" },
          "remove": { "icon": "−", "title": "Remove page" },
          "star": {
            "icon": "☆",
            "iconActive": "★",
            "title": "Set start page",
            "titleActive": "Start page"
          }
        }
      }
    },
    "container": {
      "labelField": "name",
      "idField": "id",
      "role": "branch",
      "draggable": true,
      "children": [
        { "type": "container", "collection": "containers" },
        { "type": "button", "collection": "buttons" }
      ],
      "actions": { "add": ["button", "container"], "remove": true },
      "ui": {
        "actions": {
          "add": { "icon": "+", "title": "Add inside container" },
          "remove": { "icon": "−", "title": "Remove container" }
        }
      }
    },
    "button": {
      "labelField": "label",
      "idField": "id",
      "role": "leaf",
      "draggable": true,
      "actions": { "remove": true },
      "ui": {
        "actions": {
          "remove": { "icon": "−", "title": "Remove button" }
        }
      }
    }
  },
  "dragDrop": {
    "button": {
      "accept": ["container", "button"],
      "reorderWithin": ["button"],
      "moveInto": ["container"]
    },
    "container": {
      "accept": ["container", "page"],
      "moveInto": ["container", "page"],
      "reorderWithin": ["container"]
    }
  }
}
